{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ compilar archivo activo",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/${fileBasename}",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}",
