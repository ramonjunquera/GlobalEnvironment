<Window x:Class="ThreadUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="231" Width="369" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LabelInfo" Content="Label" HorizontalAlignment="Left" Margin="11,38,0,0" VerticalAlignment="Top" Width="221" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="TextBoxValue" HorizontalAlignment="Left" Height="23" Margin="11,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="79"/>
        <Button x:Name="ButtonUpdate" Content="Update value" HorizontalAlignment="Left" Margin="95,10,0,0" VerticalAlignment="Top" Width="137" Click="ButtonUpdate_Click" Height="23"/>

    </Grid>
</Window>
