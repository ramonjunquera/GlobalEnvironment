<Window x:Class="ThreadDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ToolBar Height="34" VerticalAlignment="Top">
            <Button x:Name="buttonStart" Content="start" Click="ButtonStart_Click"/>
            <TextBox x:Name="textBoxSecs" Width="30" Text="3"/>
            <Button x:Name="buttonCancel" Content="cancel" Click="ButtonCancel_Click" IsEnabled="False"/>
            <ProgressBar x:Name="progressBar" Width="194"/>
        </ToolBar>
        <Slider Margin="10,34,10,349" SmallChange="1" TickPlacement="BottomRight" HorizontalContentAlignment="Left" LargeChange="5" ValueChanged="Slider1_ValueChanged" IsSnapToTickEnabled="True"/>
        <Slider x:Name="slider2" Margin="10,85,10,298" SmallChange="1" TickPlacement="BottomRight" HorizontalContentAlignment="Left"/>
        <Label x:Name="labelInfo" Content="info" Margin="10,141,10,10"/>
    </Grid>
</Window>
