<Window x:Class="BluetoothServerClientDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BluetoothServerClientDemo"
        mc:Ignorable="d"
        Title="Server" Height="208" Width="151" ResizeMode="NoResize" WindowStyle="ToolWindow" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="TextBoxInfo" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" Text="Hola!" VerticalAlignment="Top" HorizontalAlignment="Left" Width="114" TextChanged="TextBoxInfo_TextChanged"/>
        <GroupBox Header="Opción" Margin="10,69,0,0" Height="89" VerticalAlignment="Top" HorizontalAlignment="Left" Width="114">
            <StackPanel Margin="25,10,21,0" Height="55" VerticalAlignment="Top">
                <RadioButton x:Name="RadioButton1" Content="1" VerticalAlignment="Top"/>
                <RadioButton x:Name="RadioButton2" Content="2" VerticalAlignment="Top"/>
                <RadioButton x:Name="RadioButton3" Content="3" VerticalAlignment="Top"/>
            </StackPanel>
        </GroupBox>
        <Rectangle x:Name="RectangleSemaphore" Height="26" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Fill="Red" HorizontalAlignment="Left" Width="114"/>
    </Grid>
</Window>
